# ============================================
# Content Generation Service Configuration
# ============================================

# ============================================
# MongoDB Configuration
# ============================================
MONGODB_URI=mongodb+srv://user:pass@host/database?authSource=admin

# ============================================
# AWS S3 Configuration
# ============================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=content-generation-assets

# ============================================
# Service Configuration
# ============================================
NODE_ENV=production
API_GATEWAY_PORT=5000
LORA_TRAINING_PORT=5001

# ============================================
# External Services
# ============================================
# fal.ai for LoRA training and image generation
FAL_KEY=your_fal_api_key

# ============================================
# Security (for future auth)
# ============================================
JWT_SECRET=your-secret-key-make-it-long-and-random
API_KEY=your-api-key-for-internal-services
